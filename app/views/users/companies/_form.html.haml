.form-inputs
  .row
    .col-12.col-md-6
      = f.input :name,
        required: true,
        autofocus: true,
        input_html: { autocomplete: 'Nazwa' }
    .col-12.col-md-6
      = f.input :nip,
        required: false,
        input_html: { autocomplete: 'NIP' }
  .row
    .col-12
      = f.input :short_description,
        required: false,
        input_html: { autocomplete: 'Kr√≥tki opis' }
  = f.fields_for :address do |ff|
    .row
      .col-12.col-md-6
        = ff.input :address1,
          required: true,
          autofocus: true,
          input_html: { autocomplete: 'Adres 1' }
      .col-12.col-md-6
        = ff.input :address2,
          input_html: { autocomplete: 'Adres 2' }
    .row
      .col-12.col-md-4
        = ff.input :city,
          required: true,
          autofocus: true,
          input_html: { autocomplete: 'Miasto' }
      .col-12.col-md-4
        = ff.input :zipcode,
          required: true,
          input_html: { autocomplete: 'Kod pocztowy' }
      .col-12.col-md-4
        = ff.input :phone_number,
          required: false,
          input_html: { autocomplete: 'Numer telefonu' }
    .row
      .col-12
        = f.association :categories,
          requied: true
