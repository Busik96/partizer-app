#page-content
  .container.center-content
    .col-12.pt-5
      - if current_user.companies.exists?
        %h3
          Moje firmy:
          =link_to 'Załóż firmę', new_users_company_path, class: 'btn btn-success float-right'
        %table.table
          %thead.thead-dark
            %tr
              %th{scope: 'col'} #
              %th{scope: 'col'} Nazwa:
              %th{scope: 'col'} NIP:
              %th{scope: 'col'} Krótki opis:
              %th{scope: 'col'}
          - @companies.each do |companies|
            %tbody
              %tr
                %th{scope: 'col'}= companies.id
                %td= companies.name
                %td= companies.nip
                %td= companies.short_description
                %td
                  = link_to 'Edytuj profil firmy', company_settings_path(companies), class: 'btn btn-dark'
      - else
        .center-page.text-center
          %h3 Nie posiadasz żadnej założonej firmy! Oczywiście możesz to zmienić:
          =link_to 'Załóż firmę', new_users_company_path, class: 'btn btn-dark'
  - if @pagy.pages > 1
    .row
      .col-12.center-content
        = pagy_bootstrap_nav(@pagy).html_safe







